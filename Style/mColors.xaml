<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
            <Color x:Key="InfoColor">#2C84F8</Color>
            <Color x:Key="SuccessColor">#16D9A8</Color>
            <Color x:Key="WarningColor">#FFAB00</Color>
            <Color x:Key="ErrorColor">#FF2B00</Color>

            <Color x:Key="Text_Primary_Color">#A4A4A4</Color>
            <Color x:Key="Text_Second_Color">#C8C8C8</Color>
            
            <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>