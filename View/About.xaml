<UserControl x:Class="BeginSEO.View.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeginSEO.View"
             xmlns:Material="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="关于我们" Foreground="{DynamicResource AttentionToActionBrush}"/>
            <Material:Card Margin="14" Padding="14" MinHeight="32">
                <TextBlock Text="BeginSEO是一款开源程序，用于替换关键词、查询百度收录等" TextWrapping="Wrap"/>
            </Material:Card>
        </StackPanel>
        
    </Grid>
</UserControl>
