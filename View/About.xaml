<UserControl x:Class="BeginSEO.View.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeginSEO.View"
             xmlns:Material="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="关于我们" Foreground="{DynamicResource InfoBrush}"/>
            <Material:Card Margin="14" Padding="14" MinHeight="32">
                <TextBlock Text="BeginSEO是一款功能强大的开源软件，旨在帮助您轻松实现搜索引擎优化。它可以查询网站在百度的收录情况，一键替换关键词，提高文章排名，并提供爬虫抓取网络文章功能，帮助您快速获取有价值的内容。同时，它的源码托管于Github，您可以自由定制和修改其功能，满足个性化需求。不论您是SEO初学者还是专业人士，BeginSEO都将成为您必不可少的工具，让搜索引擎优化更加开放、自由。" TextWrapping="Wrap" Foreground="{DynamicResource MaterialDesignLightForeground}"/>
            </Material:Card>
        </StackPanel>
        
    </Grid>
</UserControl>
